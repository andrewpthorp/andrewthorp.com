!!! 5
%html{:lang => 'en', 'xmlns:fb' => 'http://www.facebook.com/2008/fbml'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UI-Compatible', :content => 'IE=edge,chrome=1'}
    %meta{:name => 'viewport', :content => 'width=device-width,initial-scale=1'}
    %link{:href => '/favicon.ico', :rel => 'favicon'}
    %title Andrew Thorp

    = stylesheet_link_tag 'vendor/icomoon.css', 'vendor/coderay-github.css', 'application.css'
    = javascript_include_tag 'vendor/jquery.min.js', 'vendor/handlebars.js', 'vendor/partymode.js', 'vendor/view.js', 'vendor/modernizr.js', 'vendor/foundation.js'

  %body
    = site_navigation

    #main
      = yield

    = partial 'partials/global_footer'

    :plain
      <script>
        $(document).foundation();
      </script>

