.row
  .large-8.large-centered.columns
    - @projects.each do |project|
      .project
        %h3= link_to project.title, project.url, target: '_blank'
        - unless project.quote.blank?
          %p.pullquote= project.quote
        %p= project.body
        - unless project.image.blank?
          %p= image_tag project.full_image_url, width: 600

        - if user_signed_in?
          %p= link_to 'Edit', "/projects/#{project.id}/edit", class: 'button secondary small'
