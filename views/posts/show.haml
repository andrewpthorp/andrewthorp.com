.row
  .nine.columns.centered
    .post.show
      %h1.gutter-bottom.title
        = link_to "&#xe04a;", "/posts", class: "no-underline icomoon"
        = @post.title

      .body
        = @post.pretty_body

      %p.uppercase.mute.medium.bold
        POSTED #{@post.created_at.to_s(:pretty)}
        - @post.tags.each do |t|
          %span.tag.gutter-right-half= link_to t.name, "/posts/tagged/#{t.name}", class: "icon-tags no-underline"

      - if session[:admin]
        %footer.group
          %ul#admin.align-right
            %li= link_to "Edit", "/posts/#{@post.slug}/edit"
            %li= link_to "Delete", "/posts/#{@post.slug}/delete"
